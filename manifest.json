{
  "description": "This add-on adds function of editing Gitlab board issue name right in the same page, without needing to open new page. It uses the personal access token of each user.",
  "manifest_version": 2,
  "name": "Better Gitlab Board",
  "version": "1.0",
  "homepage_url": "https://gitlab.com/c.samuel/better-gitlab-board",
  "icons": {
    "48": "icons/icon-48.png"
  },
  "browser_action": {
    "default_title": "Better Gitlab Board",
    "browser_style": true,
    "default_popup": "popup/input_token.html",
    "default_icon": {
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png"
    }
  },
  "permissions": ["storage"],
  "browser_specific_settings": {
    "gecko": {
      "id": "samuelchan@void.com.hk"
    },
    "edge": {
      "browser_action_next_to_addressbar": true
    }
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.gitlab.com/*/boards/*", 
        "*://*.gitlab.com/*/boards"
      ],
      "js": [
        "content_script/storage.js",
        "content_script/main.js"
      ]
    }
  ]
}
